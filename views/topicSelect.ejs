<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Buddy - Select Topics</title>
    <link rel="stylesheet" href="css/topicSelect.css">
</head>

<body>
    <div class="selectBox">
        <div id="selectTopic">
            <form action="/topictest" method="post">
                <div class="flex-between">
                    <h1>Topics</h1>
                    <input id="submit" type="submit" value="Select">
                </div>
                <div class="list">
                </div>
            </form>
        </div>
    </div>
    <script>
        // topics
    let topicList = [];
    topicListStr = `<%= topicData %>`;
   topicList = topicListStr.split(",");

   const count={};
        topicList.forEach((ele) =>{
            count[ele] = (count[ele] || 0) + 1;
        });
        let topicName = Object.keys(count);
        let topicCount = Object.values(count);

        let topicListData = topicName.join('');
        let topicCountData = topicCount.join('');
        
        let topicli = document.querySelector(".list")
        topicli.innerHTML = `<span class="flex-between" style="position:relative;">
    <li> <input type="checkbox" name="topic" value="${topicListData}">
        ${topicListData}</li>
    <i style="position:absolute;right:10px;padding:10px;">${topicCountData}</i>
    </span>`;
    </script>
</body>

</html>